@model App.Models.ViewModels.Profile


<div class="container">

	<h4>Dependent Info</h4>
	<form >
		<div class="col-md-5">
			<div class="form-group">
				<label asp-for="NextOfKinFirstName" class="control-label"></label>
				<input asp-for="NextOfKinFirstName" type="text" class="form-control" />
				<span asp-validation-for="NextOfKinFirstName"></span>
			</div>

			<div class="form-group">
				<label asp-for="NextOfKinLastName" class="control-label"></label>
				<input asp-for="NextOfKinLastName" type="text" class="form-control" />
				<span asp-validation-for="NextOfKinLastName"></span>
			</div>

			<div class="form-group">
				<label asp-for="NextOfKinAddress" class="control-label"></label>
				<input asp-for="NextOfKinAddress" type="text" class="form-control" />
				<span asp-validation-for="NextOfKinAddress"></span>
			</div>

			<div class="form-group">
				<label asp-for="NextOfKinEmail" class="control-label"></label>
				<input asp-for="NextOfKinEmail" type="date" class="form-control" />
				<span asp-validation-for="NextOfKinEmail"></span>
			</div>
			
			<div class="form-group">
				<label asp-for="NextOfKinPhone" class="control-label"></label>
				<input asp-for="NextOfKinPhone" type="date" class="form-control" />
				<span asp-validation-for="NextOfKinPhone"></span>
			</div>

			<div class="form-group">
				<a class="btn btn-outline-warning" asp-action="Biodata">Prev</a>
				<input class="btn btn-outline-success" type="submit" value="Next" />
			</div>
		</div>
	</form>
</div>